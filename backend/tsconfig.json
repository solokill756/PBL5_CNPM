{
  "compilerOptions": {
    "target": "ESNext",              
    "module": "NodeNext",             
    "moduleResolution": "NodeNext",  
    "strict": true,                  
    "rootDir": "src",                
    "outDir": "dist",          
    "removeComments": true,
    "noEmitOnError": true,      
    "esModuleInterop": true,         
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
  },
  "include": ["src"]
}
